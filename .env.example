# Agent Polis Configuration
# Copy this file to .env and fill in your values

# Application
APP_NAME=agent-polis
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# Server
HOST=0.0.0.0
PORT=8000

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/agent_polis
DATABASE_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/0

# E2B Sandbox (get your API key at https://e2b.dev)
E2B_API_KEY=your-e2b-api-key

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Agent Configuration
DEFAULT_SIMULATION_TIMEOUT=300
MAX_CONCURRENT_SIMULATIONS=10

# Metering
ENABLE_METERING=true
FREE_TIER_SIMULATIONS_PER_MONTH=100

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
